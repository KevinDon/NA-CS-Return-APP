{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "outDir": ".",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types" : ["node"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../src/test",
    "../node_modules"
  ]
}
